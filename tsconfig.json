{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "watch": true,
    "typeRoots": ["typings/globals", "typings/modules"]
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}